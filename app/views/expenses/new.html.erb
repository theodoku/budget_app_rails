<div>
  <%= link_to group_expenses_path(@group), class: "return-icon" do %>
  <% end %>
</div>

<%= form_with model: @expense, url: group_expenses_path(@group) do |form| %>
  <header class="bg-primary text-white p-2">
    <nav class="d-flex justify-content-between align-items-center text-center">
      <%= link_to group_expenses_path do %>
        <i class="fa-solid fa-chevron-left"></i>
        <span class="sr-only"></span>
      <% end %>

      <h2 class="m-0 p-0">New expense</h2>
      <%= form.submit "Save", class: "nav-link fs-2" %>
    </nav>
  </header>

  <div class="m-3">
  <div class="mb-3">
  <%= form.label :name, "Expense name", style: "display: block", class: "form-label", for: "expense_name" %>
  <%= form.text_field :name, required: true, maxlength: "12", type: "text", class: "form-control", id: "expense_name", placeholder: "Expense name" %>
</div>
<div class="mb-3">
  <%= form.label :amount, "Amount", style: "display: block", class: "form-label", for: "expense_amount" %>
  <%= form.number_field :amount, required: true, maxlength: "12", type: "text", class: "form-control", id: "expense_amount", placeholder: "Amount" %>
</div>

  </div>
<% end %>
