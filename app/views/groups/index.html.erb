<main class="container-fluid main-container">
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% @groups.each do |group| %>
    <%= link_to group_path(group), class: "text-decoration-none text-dark" do %>
      <div id="<%= dom_id group %>" class="px-2">
        <div class="d-flex justify-content-between align-items-center border border-secondary-subtle w-100 p-2 mt-2">
          <%= link_to group_expenses_path(group), class: 'text-decoration-none d-flex mr-4 w-75 align-items-center gap-3' do %>
            <%= image_tag group.icon, class: 'img-fluid img-thumbnail w-25', alt: "#{group.name} icon" %>
            <div class="d-flex flex-column">
              <p class=""><%= group.name %></p>
              <p class="my-0"><%= group.created_at.strftime('%b %d, %Y') %></p>
            </div>
          <% end %>
          <div class="d-flex flex-column justify-content-between">
            <p class=""><strong><%= "$#{group.expenses.sum(:amount)}" %></strong></p>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

  <div class="d-flex flex-column fixed-bottom align-items-center justify-content-center text-center bg-success w-100 p-3">
    <%= link_to 'Add a new category', new_group_path, class: "text-white w-100 nav-link border border-white p-2" %>
  </div>
</main>
